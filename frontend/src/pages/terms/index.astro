---
import MainTitle from "@/components/MainPage/features/MainTitle.astro";
import { AccordionTerms } from "@/components/Terms/AccordionTerms";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Container from "@/layouts/Container.astro";
import { wpFetch } from "@/lib/wp";

const { acf: pageData } = await wpFetch(`/acf/v3/pages/75`);
---

<BaseLayout title={pageData.title}>
  <Container class:list="mt-32 mb-16 bg-zinc-50">
    <MainTitle
      title={pageData.title}
      class:list="mb-8"
      />
    <AccordionTerms terms={pageData.terms} client:load/>
  </Container>
</BaseLayout>
