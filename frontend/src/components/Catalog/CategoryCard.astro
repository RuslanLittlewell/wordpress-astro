---
import { Image } from "astro:assets";
const { category } = Astro.props;
---

<a
  href={`/catalog/${category.slug}`}
  class="group flex flex-col h-[400px] p-6 bg-white rounded-lg border hover:shadow-lg transition-all hover:-translate-y-1"
>
  <div class="flex-none">
    <h2
      class="text-2xl font-semibold mb-2 group-hover:text-denim transition-colors"
    >
      {category.name}
    </h2>
    {
      category.description && (
        <p class="text-gray-600 line-clamp-2 mb-4 text-xs">{category.description}</p>
      )
    }
  </div>

  <div class="relative flex-1 w-full overflow-hidden rounded-lg bg-gray-100">
    {
      category.acf?.image ? (
        <Image
          src={category.acf.image}
          width={600}
          height={400}
          alt={category.name || "Категория"}
          loading="eager"
          decoding="async"
          format="webp"
          quality={80}
          class="w-full h-full object-cover transition-transform group-hover:scale-105"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-gray-400">
          <svg
            class="w-16 h-16"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
        </div>
      )
    }
  </div>
</a>
