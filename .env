cat > .env << 'EOF'
# DB
MYSQL_DATABASE=wordpress
MYSQL_USER=wp
MYSQL_PASSWORD=super-strong-pass
MYSQL_ROOT_PASSWORD=super-root-pass

# WP URL (для первого запуска можно на IP:8080, позже сменим на домен)
WP_HOME=http://13.61.2.249:8080
WP_SITEURL=http://13.61.2.249:8080

# CORS: домен фронта (когда заведём HTTPS на фронте — поменяем)
WP_CORS_ALLOWED_ORIGIN=http://13.61.2.249:4321

# WP admin
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=another-strong-pass
WP_ADMIN_EMAIL=you@example.com

# Astro frontend будет ходить в этот REST API (когда будет домен/https — тоже сменим)
PUBLIC_WP_API_BASE=http://13.61.2.249:8080/wp-json
# для внутренней связки (оставь как есть)
WP_API_INTERNAL_BASE=http://wordpress/wp-json
EOF
